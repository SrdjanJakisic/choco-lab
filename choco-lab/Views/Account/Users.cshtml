@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Листа корисника";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Листа свих корисника</h4>
        </p>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-center">
                            <a class="dropdown-item" asp-controller="Account" asp-action="EditUser" asp-route-id="@item.Id">
                                <i class="bi bi-pencil"></i> Измени
                            </a>
                        </td>   
                        <td class="text-center">
                            <a class="dropdown-item" asp-controller="Account" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>  
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
