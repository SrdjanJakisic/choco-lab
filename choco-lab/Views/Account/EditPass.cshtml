@using choco_lab.Data.ViewModels
@model PasswordEditVM

@{
    ViewData["Title"] = "Промените Шифру";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Промените податке</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="EditPass">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmedPassword" class="control-label"></label>
                        <input asp-for="ConfirmedPassword" class="form-control" />
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Промените шифру" />
                        <a class="btn btn-outline-secondary" asp-controller="Chocolates" asp-action="Index">Повратак</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
