@model choco_lab.Data.Models.NewChocolateMV
@using choco_lab.Data.Enums

@{
    ViewData["Title"] = "Додајте производ";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4></h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-table"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Category" class="control-table"></label>
                                <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight" class="control-table"></label>
                                <input asp-for="Weight" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ExpirationDate" class="control-table"></label>
                                <input asp-for="ExpirationDate" class="form-control" />
                                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price" class="control-table"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Image" class="control-label">Product Image</label>
                                <input asp-for="ImageUpload" class="form-control" />
                                <img src="" id="imgpreview" class="pt-2" alt="" />
                                <span asp-validation-for="ImageUpload" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ShortDescription" class="control-table"></label>
                                <textarea asp-for="ShortDescription" class="form-control"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="DetailedDescription" class="control-table"></label>
                                <textarea asp-for="DetailedDescription" class="form-control"></textarea>
                                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Додај производ" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Повратак на производе</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        });
    </script>
}
